<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="fontFamily">@font/heebo</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="AppTheme.TextView" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Title" parent="AppTheme.TextView">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/heebo_bold</item>
    </style>

    <style name="AppTheme.Subtitle" parent="AppTheme.TextView">

    </style>
</resources>
